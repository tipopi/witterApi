<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tipo.witter.mapper.TweetMapper">
    <resultMap id="tweetMap" type="">
        <result column="id" jdbcType="INTEGER" property="tweetId"/>
        <result column="userId" jdbcType="INTEGER" property="userId"/>
        <result column="text" jdbcType="VARCHAR" property="text"/>
        <result column="power" jdbcType="INTEGER" property="power"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <insert id="addTweet" >
        INSERT INTO Intern_test.blank_tl2p.Tweet (user_id, text)
        INTO (#{userId},#{text})
    </insert>
    <select id="findTweetList" resultMap="tweetMap">
        SELECT top#{TOP} id,user_id,text,power,create_time
        FROM Intern_test.blank_tl2p.Tweet
        WHERE create_time &lt;= #{createTime} AND status=0
    </select>
    <!--<select id="findTweetById" resultType="">-->
        <!--SELECT text-->
        <!--FROM Intern_test.blank_tl2p.Tweet-->
        <!--WHERE-->
    <!--</select>-->
    <update id="deleteTweet" >
        UPDATE Intern_test.blank_tl2p.Tweet
        SET
        status=1
        WHERE id=#{VALUE}
    </update>
</mapper>